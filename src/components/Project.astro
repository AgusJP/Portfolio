<style>
  .projects {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    grid-auto-rows: auto; 
    column-gap: 20px;
    row-gap: 20px;
    color: white;
  }

  .project {
    width: 100%;
    height: 350px;
    background-color: #1c1e23;
    border-radius: 15px;
  }

  .project img {
    width: 100%;
    height: 300px;
    object-fit: contain;
  }
</style>