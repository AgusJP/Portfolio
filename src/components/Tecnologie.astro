---
import { tecnologies } from '../data/tecnologies'
import Header from "../components/Header.astro";
---

<section id="tecnologie">
  <Header title="Tecnologies" subtitle="These are some of the technologies I've worked with:"/>
  <div class="container">
    {
      tecnologies.map(({name, image, type}) => (
        <div class="tecnologie">
          <img src={`/${image}`} alt="">
          <span class="name">{name}</span>
          <span class="type">{type}</span>
        </div>
        ))
    }
  </div>
</section>

<style>
  .container {
    width: 100%;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    grid-auto-rows: auto; 
    column-gap: 20px;
    row-gap: 20px;
    color: white;
  }

  .tecnologie {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    gap: 10px;
    width: 100%;
    height: 160px;
    border-radius: 15px;
    background-color: #1c1e23;
    color: white;
    padding: 2em 1em;
    box-sizing: border-box;
    position: relative;
  }

  .tecnologie::before {
    position: absolute;
    background: radial-gradient(
    400px circle at var(--mouse-x) var(--mouse-y), 
    rgba(255, 255, 255, 0.06),
    transparent 40%);
    border-radius: inherit;
    content: "";
    height: 100%;
    left: 0px;
    opacity: 0;
    transition: opacity 300ms;
    position: absolute;
    top: 0px;
    width: 100%;
    z-index: 2;
  }

  .tecnologie:hover::before {
    opacity: 1;
  }

  .name {
    display: block;
    padding: 5px 8px;
    border-radius: 8px;
    background-color: #343434;
    margin-top: 5px;
    text-align: center;
  }

  .type {
    margin-top: 5px;
    font-size: 13px;
    text-align: center;
  }

  img {
    width: 50px;
    height: 50px;
  }
</style>

<script>
  const handleOnMouseMove = (e: MouseEvent) => {
    const { currentTarget: target } = e;

    if (target instanceof HTMLElement) {
    const rect = target.getBoundingClientRect(),
                 x = e.clientX - rect.left,
                 y = e.clientY - rect.top;

    target.style.setProperty("--mouse-x", `${x}px`);
    target.style.setProperty("--mouse-y", `${y}px`);
		console.log(x,y)
    }
  }

  for (const tecnologie of document.querySelectorAll(".tecnologie")) {
    tecnologie.addEventListener('mousemove', handleOnMouseMove) 
  }
</script>