---
import '@fontsource-variable/onest'
import Navbar from "../components/Navbar.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.webp" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:title" content="Agustín Jiménez | Portfolio Web">
		<meta property="og:description" content="Bienvenidos a mi porfolio, un espacio donde puedo compartir mi trabajo creativo, experiencia profesional y pasión por el desarrollo web. Aquí encontrarán una muestra de mis proyectos más destacados, así como información sobre mis habilidades, formación y logros. ¡Espero que disfruten explorando mi porfolio tanto como yo disfruté creándolo!">
		<meta property="og:url" content="https://agustinjp.tech">
		<meta property="og:site_name" content="agustinjp.tech">
		<meta property="og:locale" content="es_ES">
		<meta property="og:image:type" content="image/webp">
		<meta property="og:image" content={new URL("/assets/web.webp", Astro.url)}>
		<meta property="og:type" content="website">
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<Navbar />
		<slot />
		<script type="module">
			document.addEventListener('astro:page-load', () => {
				(function(d, t) {
					var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
					v.onload = function() {
						window.voiceflow.chat.load({
							verify: { projectID: '65e099bc9940acbdfd95fdf9' },
							url: 'https://general-runtime.voiceflow.com',
							versionID: 'production'
						});
					}
					v.src = "https://cdn.voiceflow.com/widget/bundle.mjs"; v.type = "text/javascript"; s.parentNode.insertBefore(v, s);
				})(document, 'script');
			})
		</script>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

	html {
		font-family: "Onest Variable", system-ui, sans-serif;
	}

	* {
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	body {
		margin: 0 auto;
		padding: 0 20px 20px 20px;
		background: #101010;
		max-width: 1200px;
		box-sizing: border-box;
		min-height: 100vh;
		color: white;
		scroll-behavior: smooth;
	}

	body::-webkit-scrollbar {
		width: 7px;
	}

	body::-webkit-scrollbar-thumb {
		background: #818181;
		border-radius: 8px;
	}

	#voiceflow-chat {
		position: absolute;
	}
</style>


